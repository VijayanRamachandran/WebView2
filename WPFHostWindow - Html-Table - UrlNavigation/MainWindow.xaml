<Window x:Class="WPFHostWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHostWindow"
        mc:Ignorable="d"
        Title="WPF Host Window - HTML Table" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="On_UIReady">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>            
            <RowDefinition Height = "*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Grid.Column="0" Name="ControlHostElement1" BorderThickness="5" BorderBrush="DarkGray"/>
        <Button Grid.Row="1" Grid.Column="0" Name="Navigate" BorderThickness="5" BorderBrush="DarkGray" Height="80" Click="Navigate_Click">Navigate</Button>

    </Grid>

</Window>
